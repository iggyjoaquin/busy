/*Home styles*/
.list-container {
    margin-top:35px;
}

.list-header-busy {
    font-size: 18px;
}

.list-input-busy {
    padding-top:10px;
    padding-left: 4px;
    padding-right: 20px;
    padding-bottom: 4px;
    border:none;
    border-bottom: 1px solid #DCDCDC;
    outline: none;
    width: 100%;
    font-size: 24px;
}

.list-input-busy::-webkit-input-placeholder { /* Chrome/Opera/Safari */
  color: rgba(67,67,67,0.1);
  font-style: italic;
}

.list-input-busy::-moz-placeholder { /* Firefox 19+ */
  color: rgba(67,67,67,0.1);
  font-style: italic;
}

.list-input-busy:-ms-input-placeholder { /* IE 10+ */
  color: rgba(67,67,67,0.1);
  font-style: italic;
}

.list-input-busy:-moz-placeholder { /* Firefox 18- */
  color: rgba(67,67,67,0.1);
  font-style: italic;
}

.daily-to-do-item, .weekly-to-do-item {
    overflow: auto;
    border: none;
    border-bottom: 1px solid #DCDCDC;
    min-height: 40px;
    margin-bottom: 40px;
    padding-bottom: 20px;
}

.item-edit-input {
    outline: none;
    border: 1px solid #F2F2F2;
    padding-left:7px;
    margin-left: -8px;
    line-height: 2.5em;
    width: 85%;
}


.daily-to-do-item-completed,  .weekly-to-do-item-completed {
    border: none;
    border-left: 14px solid #6EC8B7;
    border-bottom: 10px solid #FFFFFF;
    height: 40px;
    margin-bottom: 40px;
}

.item-index-banner{
    float: left;
    margin-right: 9px;
    padding-top:2px;
    height: 30px;
    width: 30px;
    border-radius: 50%;
}

.item-text-container {
    padding-left: 3px;
}

.item-index-span {
    position: absolute;
    text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.1);
    font-size: 12px;
    margin-left: -3px;
    margin-top: 5px;
    color: #FFFFFF;
}

.item-text{
    float: left;
    margin-top:5px;
    margin-left: 5px;
    font-size:14px;
}

.item-text-completed{
    margin-left: 10px;
    font-size:20px;
    float: left;
    color: #C2C2C2;
    text-decoration: line-through;
}

.clear-completed {
    color: rgba(67,67,67,0.3);
    -webkit-transition: color 100ms linear;
    -moz-transition: color 100ms linear;
    -o-transition: color 100ms linear;
    -ms-transition: color 100ms linear;
    transition: color 100ms linear;
    margin-left: 10px;
    font-size: 11px;
    font-style: normal;
    cursor: pointer;
}

.clear-completed:hover {
    color:#6F83BA
}

.item-delete{
    color: rgba(67,67,67,0.2);
    -webkit-transition: color 100ms linear;
    -moz-transition: color 100ms linear;
    -o-transition: color 100ms linear;
    -ms-transition: color 100ms linear;
    transition: color 100ms linear;
    cursor: pointer;
    float: right;
}

.item-delete:hover{
    color:#434343
}

.item-remove{
    color: rgba(67,67,67,0.2);
    -webkit-transition: color 100ms linear;
    -moz-transition: color 100ms linear;
    -o-transition: color 100ms linear;
    -ms-transition: color 100ms linear;
    transition: color 100ms linear;
    cursor: pointer;
    float: right;
    margin-right: 7px;
}

.cancel-edit{
    color: rgba(67,67,67,0.2);
    -webkit-transition: color 100ms linear;
    -moz-transition: color 100ms linear;
    -o-transition: color 100ms linear;
    -ms-transition: color 100ms linear;
    transition: color 100ms linear;
    cursor: pointer;
    margin-left:10px;
}

.item-tools {
    padding-right: 0;
    margin-top:5px;
}

.item-remove:hover{
    color:#434343
}

.item-drag {
    float: right;
    margin-right: 10px;
    color: rgba(67,67,67,0.2);
    cursor: move;
}

/*End home styles*/


/*Layout styles*/

.navbar-busy{
